{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
  <div class="jumbotron">
      <div class="row">
        <div class="col-md-8">
        </div>

        <div class="col-md-4">
          <h2>{{ property.title }}</h2>
          <h3>{{ property.room }} room(s) {{ property.surface }} m2</h3>
          <div class="text-primary" style="font-size: 3rem; font-weight: bold">{{ property.setFormattedPrice }} Eur</div>
          <a href="#" class="btn btn-primary">Contact agency</a>
        </div>
      </div>
  </div>
  <div class="container mt-4">
    <p>
      {{ property.description | nl2br }}
    </p>

    <div class="row">
        <div class="col-md-8">
            <h2>Technical information</h2>

            <table class="table table-striped">
              <tr>
                <td>Surface </td>
                <td>{{ property.surface}} m2</td>
              </tr>

              <tr>
                <td>Room </td>
                <td>{{ property.room}}</td>
              </tr>

              <tr>
                <td>Bedrooms </td>
                <td>{{ property.bedrooms}}</td>
              </tr>

              <tr>
                <td>Floor </td>
                <td>{{ property.floor}}</td>
              </tr>

              <tr>
                <td>Heater </td>
                <td>{{ property.heatType }}</td>
              </tr>
            </table>
        </div>

        <div class="col-md-4">
          <h2>More details</h2>
        </div>
    </div>
  </div>
{% endblock %}
