{% extends 'base.html.twig' %}

{% block title property.title %}

{% block body %}
      <div class="jumbotron">
      {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
      {% endfor %}

      {% if not form.vars.valid %}
        <div class="alert alert-danger">Error on contact form</div>
      {% endif %}
      
      <div class="row">
        <div class="col-md-8">
          {% if property.filename %}
            <img src="{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('medium') }}" alt="card-img-top" style="width: 100%; height: auto;" />
          {% else %}
            <img src="{{ 'images/properties/empty.jpg' | imagine_filter('thumb') }}" alt="card-img-top" style="width: 100%; height: auto;" />
          {% endif %}
        </div>

        <div class="col-md-4">
          <h2>{{ property.title }}</h2>
          <h3>{{ property.room }} room(s) {{ property.surface }} m2</h3>
          <div class="text-primary" style="font-size: 3rem; font-weight: bold">{{ property.setFormattedPrice }} Eur</div>
          <a href="#" class="btn btn-primary">Contact agency</a>
          <div id="contactForm" class="mt-4">
              {{ form_start(form) }}
                <div class="row">
                  <div class="col">{{ form_row(form.firstname) }}</div>
                  <div class="col">{{ form_row(form.lastname) }}</div>
                </div>
                <div class="row">
                  <div class="col">{{ form_row(form.phone) }}</div>
                  <div class="col">{{ form_row(form.email) }}</div>
                </div>
                {{ form_rest(form) }}
                <div class="form-group">
                    <button class="btn btn-primary">Envoyer</button>
                </div>
              {{ form_end(form) }}
          </div>
        </div>
      </div>
  </div>
  <div class="container mt-4">
    <p>
      {{ property.description | nl2br }}
    </p>

    <div class="row">
        <div class="col-md-8">
            <h2>Technical information</h2>

            <table class="table table-striped">
              <tr>
                <td>Surface </td>
                <td>{{ property.surface}} m2</td>
              </tr>

              <tr>
                <td>Room </td>
                <td>{{ property.room}}</td>
              </tr>

              <tr>
                <td>Bedrooms </td>
                <td>{{ property.bedrooms}}</td>
              </tr>

              <tr>
                <td>Floor </td>
                <td>{{ property.floor}}</td>
              </tr>

              <tr>
                <td>Heater </td>
                <td>{{ property.heatType }}</td>
              </tr>
            </table>
        </div>

        <div class="col-md-4">
          <h2>More details</h2>
          <ul class="list-group">
            {% for option in property.options %}
                <li class="list-group-item">{{ option.name }}</li>
            {% endfor %}
          </ul>
        </div>
    </div>
  </div>
{% endblock %}
